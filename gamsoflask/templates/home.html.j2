        <div class="container swiper-fix" id="jogos">
            <h2 class="container__titulo">jogos</h2>
            <div class="swiper-container">
                <div class="swiper">
                    <div class="swiper-wrapper">

                    {% for jogo in destaques %}
                        <div class="swiper-slide">
                            <article class="cartaojogo">
                                <img src="{{ jogo.cover_url }}" alt="thumbnail jogo" class="cartaojogo__thumb">
                                <h3 class="cartaojogo__titulo">{{ jogo.title }}</h3>
                                <p class="cartaojogo__desc">{{ jogo.short_text }}</p>
                                <p class="cartaojogo__desc">{{ jogo.published_at }}</p>
                                <a href="{{ jogo.url }}" class="cartaojogo__link">jogar</a>
                            </article>
                        </div>
                    {% endfor %}

                    </div>
                </div>
                
                <!-- If we need navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
                
            </div>
            
